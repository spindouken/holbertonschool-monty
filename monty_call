#include "monty.h"

/**
 * monty_call - function pointer that takes arg of f in struct
 * @token: token
 * @line: line
 * Return: 0 on success
*/

void (*monty_call(char *token, unsigned int line))(stack_t **, unsigned int)
{
	int x;
	instruction_t call[] = {
		{"push", monty_push},
		{"pall", monty_pall},
		{"pint", monty_pint},
		{"pop", monty_pop},		
		{"swap", monty_swap},
		{"add", monty_add},
		{"nop", monty_nop},
		{NULL, NULL}
	};
	for (x = 0; call[x].opcode != NULL; x++)
	{
		if (strcmp(token, call[x].opcode) == 0)
			return (call[x].f);
	}
	return (NULL);
}
